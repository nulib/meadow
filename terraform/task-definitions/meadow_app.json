[
  {
    "name": "meadow-${name}",
    "image": "nulib/meadow:${docker_tag}",
    "cpu": ${cpu_reservation},
    "memoryReservation": ${memory_reservation},
    "mountPoints": [
      {
        "sourceVolume": "meadow-working",
        "containerPath": "/working"
      }
    ],
    "essential": true,
    "environment": [
      {
        "name": "MEADOW_PROCESSES",
        "value": "${processes}"
      },
      {
        "name": "SECRET_KEY_BASE",
        "value": "${secret_key_base}"
      },
      {
        "name": "DIGITAL_COLLECTIONS_URL",
        "value": "${digital_collections_url}"
      },
      {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      },
      {
        "name": "HONEYBADGER_API_KEY",
        "value": "${honeybadger_api_key}"
      },
      {
        "name": "ELASTICSEARCH_KEY",
        "value": "${elasticsearch_key}"
      },
      {
        "name": "ELASTICSEARCH_SECRET",
        "value": "${elasticsearch_secret}"
      },
      {
        "name": "ELASTICSEARCH_URL",
        "value": "${elasticsearch_url}"
      },
      {
        "name": "EZID_PASSWORD",
        "value": "${ezid_password}"
      },
      {
        "name": "EZID_SHOULDER",
        "value": "${ezid_shoulder}"
      },
      {
        "name": "EZID_TARGET_BASE_URL",
        "value": "${ezid_target_base_url}"
      },
      {
        "name": "EZID_USER",
        "value": "${ezid_user}"
      },
      {
        "name": "GEONAMES_USERNAME",
        "value": "${geonames_username}"
      },
      {
        "name": "IIIF_MANIFEST_URL",
        "value": "${iiif_manifest_url}"
      },
      {
        "name": "IIIF_SERVER_URL",
        "value": "${iiif_server_url}"
      },
      {
        "name": "INGEST_BUCKET",
        "value": "${ingest_bucket}"
      },
      {
        "name": "LDAP_BASE_DN",
        "value": "${ldap_base_dn}"
      },
      {
        "name": "LDAP_BIND_DN",
        "value": "${ldap_bind_dn}"
      },
      {
        "name": "LDAP_BIND_PASSWORD",
        "value": "${ldap_bind_password}"
      },
      {
        "name": "LDAP_PORT",
        "value": "${ldap_port}"
      },
      {
        "name": "LDAP_SERVER",
        "value": "${ldap_server}"
      },
      {
        "name": "MEADOW_HOSTNAME",
        "value": "${host_name}"
      },
      {
        "name": "DB_POOL_SIZE",
        "value": "${db_pool_size}"
      },
      {
        "name": "DB_QUEUE_TARGET",
        "value": "${db_queue_target}"
      },
      {
        "name": "DB_QUEUE_INTERVAL",
        "value": "${db_queue_interval}"
      },
      {
        "name": "PRESERVATION_BUCKET",
        "value": "${preservation_bucket}"
      },
      {
        "name": "PYRAMID_BUCKET",
        "value": "${pyramid_bucket}"
      },
      {
        "name": "PYRAMID_TIFF_WORKING_DIR",
        "value": "/working"
      },
      {
        "name": "RELEASE_COOKIE",
        "value": "${secret_key_base}"
      },
      {
        "name": "RELEASE_DISTRIBUTION",
        "value": "name"
      },
      {
        "name": "UPLOAD_BUCKET",
        "value": "${upload_bucket}"
      },
      {
        "name": "AGENTLESS_SSO_KEY",
        "value": "${agentless_sso_key}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 4000,
        "hostPort": 4000,
        "protocol": "tcp"
      },
      {
        "containerPort": 4369,
        "hostPort": 4369,
        "protocol": "tcp"
      },
      {
        "containerPort": 24601,
        "hostPort": 24601,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "app"
      }
    },
    "volumesFrom": []
  }
]
