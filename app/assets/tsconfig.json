{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["*"],
      "@/js/*": ["js/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["js/**/*.ts"]
}
